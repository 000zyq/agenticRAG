#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR=$(git rev-parse --show-toplevel)
cd "$ROOT_DIR"

if [[ ! -x "scripts/run_lint.sh" ]]; then
  echo "scripts/run_lint.sh not found or not executable" >&2
  exit 1
fi

if [[ ! -x "scripts/run_tests.sh" ]]; then
  echo "scripts/run_tests.sh not found or not executable" >&2
  exit 1
fi

echo "Running lint..."
./scripts/run_lint.sh

echo "Running tests (non-integration)..."
./scripts/run_tests.sh
